<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_brown"
            tools:context=".audio.AudioFragment">


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager_audio_series"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/circle_indicator_audio_series"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/view_pager_audio_series"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:background="@color/light_brown" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_audio_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/circle_indicator_audio_series" />

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/recycler_view_audio_id" />

        </RelativeLayout>
    </ScrollView>
</layout>